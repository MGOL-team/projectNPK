<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MakeOrderFragment"
    android:background="@color/white"
    android:id="@+id/okkay">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OrderActivity">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:src="?attr/homeAsUpIndicator"
            android:scaleType="fitStart"
            android:id="@+id/button_back"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:paddingRight="36sp"
            android:paddingLeft="36sp"
            android:paddingTop="24sp"

            android:hint="Товары"

            android:textSize="24sp"
            android:id="@+id/items_field"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:paddingRight="36sp"
            android:paddingLeft="36sp"
            android:paddingTop="24sp"

            android:hint="Адрес доставки"

            android:textSize="24sp"
            android:id="@+id/address_field"/>

<!--        <fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--            xmlns:tools="http://schemas.android.com/tools"-->
<!--            android:id="@+id/map"-->
<!--            android:name="com.google.android.gms.maps.SupportMapFragment"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0sp"-->
<!--            android:layout_weight="3"-->
<!--            tools:context="com.example.mapwithmarker.MapsMarkerActivity" >-->


        <EditText
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:paddingRight="36sp"
            android:paddingLeft="36sp"
            android:paddingTop="24sp"

            android:hint="Сумма и комментарии"

            android:textSize="24sp"
            android:id="@+id/comments_field"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:paddingRight="36sp"
            android:paddingLeft="36sp"
            android:paddingTop="24sp"

            android:text="Confirm"
            android:textSize="24sp"
            android:id="@+id/confirm_button"/>



    </LinearLayout>

</FrameLayout>